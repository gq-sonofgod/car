<!--miniprogram/pages/advance/advance.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">车辆使用登记</view>
</cu-custom>
<!-- <block wx:if> -->
<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
<form bindsubmit="formSubmit" >
<view class="cu-form-group" >
    <text class="title cuIcon-profile text-red margin-right">  </text>
    <input  name="name"  placeholder="领用人" ></input>
  </view >

 <view class="cu-form-group">
    <text class="title cuIcon-dianhua text-orange margin-right">  </text>
    <input  name="phonenumber" placeholder="联系方式" maxlength="11"></input>
  </view >

  <view class="cu-form-group" >
    <text class="title cuIcon-group text-yellow margin-right">  </text>
    <input  name="starttime"  placeholder="出发时间" ></input>
  </view >
  
  <view class="cu-form-group" >
    <text class="title cuIcon-location text-green margin-right">  </text>
    <input  name="startmile" placeholder="出发里程"></input>
  </view >

 <view class="cu-form-group" >
    <text class="title cuIcon-group text-yellow margin-right">  </text>
    <input  name="endtime"  placeholder="返回时间" ></input>
  </view >
  
  <view class="cu-form-group" >
    <text class="title cuIcon-location text-green margin-right">  </text>
    <input  name="endmile" placeholder="返回里程"></input>
  </view >
	<!-- 填写见证 -->
<view class="cu-form-group margin-top">
	<textarea maxlength="-1" bindinput="textareaAInput" placeholder="事由"></textarea>
</view>


 
<button  class="bt_connect" shape="circle" formType='submit' >提交</button>
</form>
</view >
